{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "views/*": [
        "src/views/*"
      ],
      "common/*": [
        "src/common/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}

